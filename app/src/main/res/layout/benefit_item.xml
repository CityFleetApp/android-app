<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/benefits_corner_radius"
    card_view:cardElevation="@dimen/benefits_elevation"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cityfleet.view.main.benefits.BenefitsImageView
            android:id="@+id/benefitImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/testprofile" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/benefitImage"
            android:background="@color/benefit_name_background"
            android:clickable="true"
            android:padding="@dimen/benefit_name_padding_top">

            <TextView
                android:id="@+id/benefitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Benefit name"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/benefit_name_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_circle" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>