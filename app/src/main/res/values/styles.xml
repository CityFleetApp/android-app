<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/green_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/edittext_padding</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textColorHint">@color/greyText</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="RegistrationEdittextLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/reg_edittext_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/reg_edittext_color</item>
        <item name="android:textSize">@dimen/reg_edittext_lbl_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegistrationEdittextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/reg_edittext_padding_top</item>
        <item name="android:paddingTop">@dimen/reg_edittext_padding_top</item>
        <item name="android:textColor">@color/reg_edittext_hintcolor</item>
        <item name="android:textColorHint">@color/reg_edittext_hintcolor</item>
        <item name="android:textSize">@dimen/reg_edittext_lbl_textsize</item>
    </style>

    <style name="BottomPanelButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/bottom_menu_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/bottom_menu_text_selector</item>
        <item name="fontPath">@string/fontLight</item>
        <item name="android:padding">@dimen/bottom_menu_padding</item>
        <item name="android:drawablePadding">@dimen/bottom_menu_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ReportButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/report_dialog_header</item>
        <item name="android:textSize">@dimen/report_text_size</item>
        <item name="android:drawablePadding">@dimen/report_padding_drawable</item>
        <item name="android:padding">@dimen/report_padding</item>
    </style>

    <style name="AddFriendsBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/add_friends_drawable_padding_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/add_friends_padding_top</item>
        <item name="android:paddingLeft">@dimen/add_friends_padding_left</item>
        <item name="android:paddingTop">@dimen/add_friends_padding_top</item>
        <item name="android:textSize">@dimen/add_friend_textsize</item>
    </style>

    <style name="DashBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dash_btn_background_selector</item>
        <item name="android:drawablePadding">@dimen/add_friends_drawable_padding_top</item>
        <item name="android:padding">@dimen/add_friends_padding_top</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/dash_btn_text_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/add_friend_textsize</item>
    </style>
    <style name="GreenTextWithLeftIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/text_with_icon_left_padding</item>
        <item name="android:paddingBottom">@dimen/profile_lbl_margin_top</item>
        <item name="android:paddingLeft">@dimen/profile_padding_side</item>
        <item name="android:paddingRight">@dimen/profile_padding_side</item>
        <item name="android:paddingTop">@dimen/profile_padding_side</item>
        <item name="android:textColor">@color/green_color_text</item>
        <item name="android:textSize">@dimen/green_text_wth_icon_size</item>
    </style>

    <style name="MarketplacaBtnLayoutStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marketplace_btn_margin_side</item>
        <item name="android:layout_marginRight">@dimen/marketplace_btn_margin_side</item>
        <item name="android:paddingBottom">@dimen/marketplace_btn_padding_top</item>
        <item name="android:paddingLeft">@dimen/marketplace_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/marketplace_btn_padding_top</item>
        <item name="android:paddingTop">@dimen/marketplace_btn_padding_top</item>
    </style>

    <style name="MarketplaceTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingLeft">@dimen/marketplace_btn_padding_drawable</item>
    </style>
</resources>
